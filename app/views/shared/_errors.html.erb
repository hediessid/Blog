
<% if obj.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <!-- class panel put all the blok in a panel  -->
      <!-- class panel-danger give the panel around a color red -->
      <div class="panel panel-danger">
        <!-- give a color red to the panel area  --> 
        <div class="panel-heading">
          <h2 class="panel-title">
          <%= pluralize(obj.errors.count,"error")%>
          The following errors prevented the article from getting created</h2>
            <div class="panel-body">
              <ul>
                <% obj.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        </div>
      </div>
    </div>
  </div>
<% end %>